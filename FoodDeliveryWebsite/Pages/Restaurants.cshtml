@page
@model FoodDeliveryWebsite.Pages.RestaurantsModel
@{
    ViewData["Title"] = "Browse Restaurants";
}

<h1 class="text-2xl font-bold mb-6">Restaurants</h1>

@if (Model.Restaurants.Any())
{
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        @foreach (var restaurant in Model.Restaurants)
        {
            <div class="border rounded-lg p-4 shadow hover:shadow-lg transition">
                <a href="/Restaurant/@restaurant.RestaurantId">
                    @if (!string.IsNullOrEmpty(restaurant.LogoPath))
                    {
                        <img src="@restaurant.LogoPath" alt="@restaurant.Name" class="w-full h-40 object-cover rounded-t-lg mb-4" />
                    }
                    <h2 class="text-xl font-semibold">@restaurant.Name</h2>
                    <p class="text-gray-600">@restaurant.Category</p>
                    <p class="text-gray-500 text-sm">@restaurant.City</p>
                </a>
            </div>
        }
    </div>
}
else
{
    <p>No restaurants available.</p>
}
