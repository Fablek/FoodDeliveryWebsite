@page "{id:int}"
@model FoodDeliveryWebsite.Pages.EditProductModel
@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

<form method="post" enctype="multipart/form-data" class="form-group">
    <input type="hidden" asp-for="Product.ProductId" />
    <input type="hidden" asp-for="Product.RestaurantId" />

    <label asp-for="Product.Name"></label>
    <input asp-for="Product.Name" class="form-control" />

    <label asp-for="Product.Description"></label>
    <textarea asp-for="Product.Description" class="form-control"></textarea>

    <label asp-for="Product.Price"></label>
    <input asp-for="Product.Price" class="form-control" />

    <label asp-for="Product.Category"></label>
    <input asp-for="Product.Category" class="form-control" />

    <div>
        <label>Current Image:</label><br />
        @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
        {
            <img src="@Model.Product.ImageUrl" style="max-height: 100px;" />
        }
    </div>

    <div>
        <label>New Image (optional):</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>
